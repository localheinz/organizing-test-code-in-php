{
  "name": "localheinz/organizing-test-code-in-php",
  "description": "Provides a companion repository for organizing test code in PHP",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Andreas MÃ¶ller",
      "email": "am@localheinz.com"
    }
  ],
  "homepage": "https://github.com/localheinz/organizing-test-code-in-php",
  "support": {
    "issues": "https://github.com/localheinz/organizing-test-code-in-php/issues",
    "source": "https://github.com/localheinz/organizing-test-code-in-php"
  },
  "require": {
    "php": "~8.2.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.41.1",
    "ergebnis/data-provider": "^3.2.0",
    "ergebnis/license": "^2.4.0",
    "ergebnis/php-cs-fixer-config": "^6.13.1",
    "ergebnis/phpunit-slow-test-detector": "^2.7.0",
    "fakerphp/faker": "^1.23.0",
    "infection/infection": "~0.27.9",
    "phpbench/phpbench": "^1.2.15",
    "phpunit/phpunit": "^10.5.2",
    "psalm/plugin-phpunit": "~0.18.4",
    "rector/rector": "~0.18.13",
    "vimeo/psalm": "^5.17.0"
  },
  "autoload": {
    "psr-4": {
      "Localheinz\\OrganizingTestCodeInPhp\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true
    },
    "audit": {
      "abandoned": "report"
    },
    "platform": {
      "php": "8.2.0"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  }
}
