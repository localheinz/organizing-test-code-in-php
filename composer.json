{
  "name": "localheinz/organizing-test-code-in-php",
  "description": "Provides a companion repository for organizing test code in PHP",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Andreas MÃ¶ller",
      "email": "am@localheinz.com"
    }
  ],
  "homepage": "https://github.com/localheinz/organizing-test-code-in-php",
  "support": {
    "issues": "https://github.com/localheinz/organizing-test-code-in-php/issues",
    "source": "https://github.com/localheinz/organizing-test-code-in-php"
  },
  "require": {
    "php": "~8.3.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.44.0",
    "ergebnis/data-provider": "^3.3.0",
    "ergebnis/license": "^2.6.0",
    "ergebnis/php-cs-fixer-config": "^6.37.0",
    "ergebnis/phpunit-slow-test-detector": "^2.16.1",
    "fakerphp/faker": "^1.24.0",
    "infection/infection": "~0.27.11",
    "phpbench/phpbench": "^1.3.1",
    "phpunit/phpunit": "^10.5.26",
    "psalm/plugin-phpunit": "~0.19.0",
    "rector/rector": "~0.18.13",
    "vimeo/psalm": "^5.25.0"
  },
  "autoload": {
    "psr-4": {
      "Localheinz\\OrganizingTestCodeInPhp\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true
    },
    "audit": {
      "abandoned": "report"
    },
    "platform": {
      "php": "8.3.0"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  }
}
